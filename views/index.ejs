<script>
    // Cargar noticias destacadas
    fetch('/api/noticias?destacadas=true&limite=3')
        .then(res => res.json())
        .then(noticias => {
            const container = document.getElementById('noticias-container');
            if (noticias && noticias.length > 0) {
                container.innerHTML = noticias.map(noticia => `
                    <article class="noticia-card">
                        <img src="${noticia.imagen || '/images/default-news.jpg'}" alt="${noticia.titulo}">
                        <div class="noticia-content">
                            <span class="noticia-fecha">${new Date(noticia.fecha).toLocaleDateString()}</span>
                            <h3>${noticia.titulo}</h3>
                            <p>${noticia.resumen}</p>
                            <a href="/noticias/${noticia.id}" class="read-more">Leer más →</a>
                        </div>
                    </article>
                `).join('');
            } else {
                container.innerHTML = '<p>No hay noticias disponibles</p>';
            }
        })
        .catch(error => {
            console.error('Error cargando noticias:', error);
        });
</script>

