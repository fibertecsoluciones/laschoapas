<!-- ===== SECCIÓN DE NOTICIAS CON PAGINACIÓN ===== -->
<section class="noticias-page" id="noticias">
    <div class="container">
        <h2 class="section-title">Noticias y Eventos</h2>
       
        <!-- GRID DE NOTICIAS -->
        <% if (noticias && noticias.length > 0) { %>
            <div class="noticias-grid">
                <% noticias.forEach(noticia => { %>
                    <article class="noticia-card">
                        <img src="<%= noticia.imagen || '/imagenes/default-news.jpg' %>" alt="<%= noticia.titulo %>">
                        <div class="noticia-content">
                            <span class="noticia-fecha">
                                <i class="far fa-calendar-alt"></i> 
                                <%= new Date(noticia.fecha).toLocaleDateString('es-MX', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                            </span>
                            <h3><%= noticia.titulo %></h3>
                            <p><%= noticia.resumen %></p>
                            <a href="/noticias/<%= noticia.id %>" class="read-more">
                                Leer más <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </article>
                <% }) %>
            </div>
        <% } else { %>
            <p class="no-noticias">No hay noticias disponibles</p>
        <% } %>
        
        <!-- ===== PAGINACIÓN CON ANCLAJE ===== -->
        <% if (paginacion && paginacion.total > 1) { %>
            <div class="paginacion">
                <!-- Botón anterior -->
                <% if (paginacion.anterior) { %>
                    <a href="/?page=<%= paginacion.anterior %>#noticias" class="page-link prev">
                        <i class="fas fa-chevron-left"></i> Anterior
                    </a>
                <% } else { %>
                    <span class="page-link disabled">
                        <i class="fas fa-chevron-left"></i> Anterior
                    </span>
                <% } %>
                
                <!-- Números de página -->
                <div class="page-numbers">
                    <% for (let i = 1; i <= paginacion.total; i++) { %>
                        <% if (i === paginacion.actual) { %>
                            <span class="page-number active"><%= i %></span>
                        <% } else { %>
                            <a href="/?page=<%= i %>#noticias" class="page-number"><%= i %></a>
                        <% } %>
                    <% } %>
                </div>
                
                <!-- Botón siguiente -->
                <% if (paginacion.siguiente) { %>
                    <a href="/?page=<%= paginacion.siguiente %>#noticias" class="page-link next">
                        Siguiente <i class="fas fa-chevron-right"></i>
                    </a>
                <% } else { %>
                    <span class="page-link disabled">
                        Siguiente <i class="fas fa-chevron-right"></i>
                    </span>
                <% } %>
            </div>
        <% } %>
    </div>
</section>

