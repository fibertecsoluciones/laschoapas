<!-- Script para scroll suave -->
<script>
    // Si hay un hash en la URL (#noticias), hacer scroll suave
    if (window.location.hash === '#noticias') {
        window.addEventListener('load', function() {
            setTimeout(function() {
                const noticiasSection = document.getElementById('noticias');
                if (noticiasSection) {
                    noticiasSection.scrollIntoView({ 
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            }, 100);
        });
    }
</script>

